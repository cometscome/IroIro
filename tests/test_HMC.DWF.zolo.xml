<?xml version="1.0" encoding="UTF-8" ?>
<!-- sample input file for configuration generator -->
<Parameters>
  <!-- Geometry parameters here -->
  <Geometry>
    <Lattice>8 8 8 8</Lattice>
    <Nodes>1 1 1 1</Nodes>
    <Boundary_cond>1 1 1 1</Boundary_cond>
    <!-- other params here -->
  </Geometry>
  <!-- Input configuration -->
  <Configuration Type="Unit">final_conf.bin</Configuration> 
  <!-- definition of HMC trajectory -->
  <HMC>
    <Nsweeps>20</Nsweeps>
    <Thermalization>0</Thermalization>
    <SaveInterval>0</SaveInterval>
    <SavePrefix>Conf_</SavePrefix>
    
    <RandomNumberGen name="Mersenne Twister">
      <!--   <seedFile>seed_file</seedFile>
           Using seedFile superseeds the <init> line 
           that can be safely omitted
           It is ignored by factory in this case -->
      <init>0x123 0x234 0x345 0x456</init> 
    </RandomNumberGen>
    
    <Integrator name="leapfrog_multistep">
      <MDsteps>25</MDsteps>
      <step_size>0.02</step_size>
      <exp_approx>8</exp_approx>
      <step>
        <multiplier>1</multiplier>
          <Action type="Fermion" name="TwoFlavorsDomainWall">
            <Kernel5D>
              <Preconditioning>NoPreconditioner</Preconditioning>
              <Kernel5d name="DiracWilson">
                <mass>-1.9</mass>
              </Kernel5d>
              <N5d>8</N5d>
              <b>1.0</b>
              <c>1.0</c>
              <mass>0.2</mass>
              <approximation name="Zolotarev">
                <lambda_min>0.1</lambda_min>
                <lambda_max>1.5</lambda_max>
              </approximation>
            </Kernel5D>
            <Solver type="Solver_CG">
              <MaxIter>10000</MaxIter>
              <Precision>10e-16</Precision>
            </Solver>  
          </Action>

          <step>
            <multiplier>2</multiplier>
            <Action type="Gauge" name="Wilson">
              <beta>5.2</beta>
            </Action>
          </step>

        </step>
      
    </Integrator>
  </HMC>
  
</Parameters>
