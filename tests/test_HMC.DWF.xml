<?xml version="1.0" encoding="UTF-8" ?>
<!-- sample input file for configuration generator -->
<Parameters>
  <!-- Geometry parameters here -->
  <Geometry>
    <Lattice>4 4 4 8</Lattice>
    <Nodes>1 1 1 1</Nodes>
    <Boundary_cond>1 1 1 1</Boundary_cond>
    <!-- other params here -->
  </Geometry>
  <!-- Input configuration -->
  <Configuration Type="Unit">final_conf.bin</Configuration> 
  <!-- definition of HMC trajectory -->
  <HMC>
    <Nsweeps>2</Nsweeps>
    <Thermalization>0</Thermalization>
    
    <RandomNumberGen name="Mersenne Twister">
      <!--   <seedFile>seed_file</seedFile>
	   Using seedFile superseeds the <init> line 
           that can be safely omitted
           It is ignored by factory in this case -->
      <init>0x123 0x234 0x345 0x456</init> 
    </RandomNumberGen>
    
    <Integrator name="leapfrog_multistep">
      <MDsteps>3</MDsteps>
      <step_size>0.01</step_size>
      <exp_approx>8</exp_approx>
      <step>
	<multiplier>1</multiplier>
	<Action type="Fermion" name="TwoFlavorsRatio">
	  <Numerator name="DiracOptimalDomainWall5d">
	    <Preconditioning>NoPreconditioner</Preconditioning>
	    <wilson_mass>-1.8</wilson_mass>
	    <N5d>6</N5d>
	    <b>2.0</b>
	    <c>0.0</c>
	    <mass>0.05</mass>
	    <approximation name="Tanh" />
	  </Numerator>
	  
	  <Denominator name="DiracOptimalDomainWall5d">
	    <Preconditioning>NoPreconditioner</Preconditioning>
	    <wilson_mass>-1.8</wilson_mass>
	    <N5d>6</N5d>
	    <b>2.0</b>
	    <c>0.0</c>
	    <mass>0.10</mass>
	    <approximation name="Tanh" />
	  </Denominator>
	  
	  <SolverNumerator type="Solver_CG">
	    <MaxIter>1000</MaxIter>
	    <Precision>1e-12</Precision>
	  </SolverNumerator>
	  
	  <SolverDenominator type="Solver_CG">
	    <MaxIter>1000</MaxIter>
	    <Precision>10e-12</Precision>
	  </SolverDenominator>

	</Action>	 
	<step>
	  <multiplier>2</multiplier>
	  <Action type="Fermion" name="TwoFlavorsDomainWall_5D">
	    <Kernel5D name="DiracOptimalDomainWall5d">
	      <Preconditioning>NoPreconditioner</Preconditioning>
	      <wilson_mass>-1.8</wilson_mass>
	      <N5d>6</N5d>
	      <b>2.0</b>
	      <c>0.0</c>
	      <mass>0.10</mass>
	      <approximation name="Tanh" />
	    </Kernel5D>
	    <Solver type="Solver_CG">
	      <MaxIter>1000</MaxIter>
	      <Precision>10e-12</Precision>
	    </Solver>  
	  </Action>

	  <step>
	    <multiplier>2</multiplier>
	    <Action type="Gauge" name="Wilson">
	      <beta>6.0</beta>
	    </Action>
	  </step>

	</step>
      </step>
      
    </Integrator>
  </HMC>
  
</Parameters>

